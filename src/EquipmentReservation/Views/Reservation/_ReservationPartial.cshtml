@model EquipmentReservation.Models.ReservationViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@Html.HiddenFor(model => model.Id)

<div class="form-group">
    <label>利用者</label>
    @Html.DropDownListFor(model => model.SelectedAccountId, new SelectList(Model.AccountList, "Id", "Name", 1), "-- 選択してください --", new { @class = "form-control" })
    <span asp-validation-for="SelectedAccountId" class="text-danger"></span>
</div>
<div class="form-group">
    <label>備品</label>
    @Html.DropDownListFor(model => model.SelectedEquipmentId, new SelectList(Model.EquipmentList, "Id", "Name", 1), "-- 選択してください --", new { @class = "form-control" })
    <span asp-validation-for="SelectedEquipmentId" class="text-danger"></span>
</div>
<div class="form-group">
    <label>利用開始日時</label>
    <input asp-for="StartDate" class="form-control" type="date" />
    <span asp-validation-for="StartDate" class="text-danger"></span>
    <input asp-for="StartTime" class="form-control" type="time" />
    <span asp-validation-for="StartTime" class="text-danger"></span>
</div>
<div class="form-group">
    <label>利用終了日時</label>
    <input asp-for="EndDate" class="form-control" type="date" />
    <span asp-validation-for="EndDate" class="text-danger"></span>
    <input asp-for="EndTime" class="form-control" type="time" />
    <span asp-validation-for="EndTime" class="text-danger"></span>
</div>
<div class="form-group">
    <label>利用目的</label>
    <input asp-for="PurposeOfUse" class="form-control" placeholder="利用目的" />
    <span asp-validation-for="PurposeOfUse" class="text-danger"></span>
</div>

<input type="submit" class="btn btn-primary" value="予約" />


