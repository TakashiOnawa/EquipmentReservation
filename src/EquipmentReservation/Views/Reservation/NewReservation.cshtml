@model EquipmentReservation.Models.ReservationViewModel
@{
    ViewBag.Title = "新規予約";
}

<h2>新規予約</h2>

@using (Html.BeginForm("RegisterReservation", "Reservation"))
{
    <div class="form-group">
        <label>利用者</label>
        @Html.DropDownListFor(model => model.SelectedAccountId, new SelectList(Model.AccountList, "Id", "Name", 1), "-- 選択してください --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>備品</label>
        @Html.DropDownListFor(model => model.SelectedEquipmentId, new SelectList(Model.EquipmentList, "Id", "Name", 1), "-- 選択してください --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>利用開始日時</label>
        <input asp-for="FromDate" class="form-control" type="date" />
        <input asp-for="FromTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label>利用終了日時</label>
        <input asp-for="ToDate" class="form-control" type="date" />
        <input asp-for="ToTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label>利用目的</label>
        <input asp-for="Purpose" class="form-control" placeholder="利用目的" />
    </div>
    <div class="form-group">
        <label>利用終了日時</label>
    </div>
    <input type="submit" class="btn btn-primary" value="予約" />
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

